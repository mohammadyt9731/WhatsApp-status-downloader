<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_whatsapp_icon"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/space_large"
        android:src="@drawable/ic_whatsapp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/iv_whatsapp_icon">

        <TextView
            android:id="@+id/tv_menu_share_app"
            style="@style/tv_menu_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_app"
            app:drawableRightCompat="@drawable/ic_share" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/view_divider_menu_style"
           />

        <TextView
            android:id="@+id/tv_other_app"
            style="@style/tv_menu_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/other_apps"
            app:drawableRightCompat="@drawable/ic_other_app" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/view_divider_menu_style"
/>

        <TextView
            android:id="@+id/tv_about_us"
            style="@style/tv_menu_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_us"
            app:drawableRightCompat="@drawable/ic_about_us" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/view_divider_menu_style"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>