<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatsAppstatusDowloader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/dark_green</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@color/dark_green</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigation.Overline</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigation.Overline</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="TextAppearance.BottomNavigation.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>


    <style name="tv_medial_activity_style" >
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:layout_marginLeft">@dimen/space_medium</item>
        <item name="android:layout_marginRight">@dimen/space_medium</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/space_small</item>
        <item name="android:paddingRight">@dimen/space_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="layout_constraintDimensionRatio">2:1.1</item>
        <item name="cornerRadius">@dimen/space_small</item>


    </style>


    <style name="tv_menu_style">

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:drawablePadding">@dimen/space_small</item>
        <item name="android:drawableTint">@color/green</item>
        <item name="android:layout_margin">@dimen/space_medium</item>
    </style>

    <style name="view_divider_menu_style">

        <item name="android:background">@color/green</item>

        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:layout_marginBottom">@dimen/space_small</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!--dialog styles    -->
    <style name="tv_title_dialog_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:layout_marginBottom">@dimen/space_medium</item>
        <item name="android:paddingBottom">@dimen/space_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iv_dialog_style">

        <item name="android:layout_width">@dimen/_22sdp</item>
        <item name="android:layout_height">@dimen/_22sdp</item>
        <item name="android:layout_marginRight">@dimen/space_medium</item>
    </style>

    <style name="tv_dialog_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_medium</item>
        <item name="android:layout_marginRight">@dimen/space_small</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="scale_anim_style">
        <item name="android:windowEnterAnimation">@anim/scale_in_animation</item>
        <item name="android:windowExitAnimation">@anim/scale_out_animation</item>
    </style>

    <style name="tv_point_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn_dialog_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/space_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/space_medium</item>
        <item name="android:paddingBottom">@dimen/space_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="cornerRadius">@dimen/space_small</item>


    </style>




</resources>