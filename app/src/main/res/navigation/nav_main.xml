<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/guide_fragment"
        android:name="com.test.whatsappstatusdowloader.fragment.GuideFragment"
        android:label="GuideFragment"
        tools:layout="@layout/fragment_guide"
        />
    <fragment
        android:id="@+id/whatsapp_status_fragment"
        android:name="com.test.whatsappstatusdowloader.fragment.StatusFragment"
        android:label="WhatsappStatusFragment"
        tools:layout="@layout/fragment_whatsapp_status"/>
    <fragment
        android:id="@+id/wb_status_fragment"
        android:name="com.test.whatsappstatusdowloader.fragment.StatusFragment"
        android:label="WbStatusFragment"
        tools:layout="@layout/fragment_whatsapp_status"/>
    <fragment
        android:id="@+id/saved_status_fragment"
        android:name="com.test.whatsappstatusdowloader.fragment.StatusFragment"
        android:label="SavedStatusFragment"
        tools:layout="@layout/fragment_whatsapp_status">
        <argument
            android:name="directory_key"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/show_media_fragment"
        android:name="com.test.whatsappstatusdowloader.fragment.ShowMediaFragment"
        android:label="ShowMediaFragment"
        tools:layout="@layout/fragment_show_media"
        />
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.test.whatsappstatusdowloader.fragment.SplashScreenFragment"
        android:label="SplashScreenFragment"
        tools:layout="@layout/fragment_splash_screen"
        >
        <action
            android:id="@+id/action_splashScreenFragment_to_guide_fragment"
            app:destination="@id/guide_fragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
</navigation>